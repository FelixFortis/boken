.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      =link_to 'adventureList', root_path, class: "brand"
      - if user_signed_in?
        %ul.nav.pull-right
          %li.dropdown
            %a.inverse.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              = "#{current_user.username} "
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to 'My profile', user_profile_path(current_user), id: "dropdown-link-profile"
              %li
                = link_to 'My goals', profile_user_goals_path(params[:id]), id: "dropdown-link-goals"
          %li
            = link_to 'All goals', global_goals_path
          %li
            = link_to 'Logout', destroy_user_session_path, method: :delete
      - else
        %ul.nav.pull-right
          %li
            = link_to 'All goals', global_goals_path
          %li
            = link_to 'Login', new_user_session_path
          %li
            = link_to 'Sign up', new_user_registration_path